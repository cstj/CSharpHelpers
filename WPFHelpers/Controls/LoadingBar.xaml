<UserControl x:Class="Helpers.WPFHelpers.Controls.LoadingBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="30.333" Width="52">
    <Grid Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ProgressBar Name="PgsBar" Maximum="{Binding PgsMax}" Value="{Binding PgsCurrent}" SmallChange="0.05" Grid.Row="2"/>
        <TextBlock Name="LineOneBlock" FontSize="{Binding FontSize}" VerticalAlignment="Center" Text="{Binding LineOne}" Height="16" />
        <TextBlock Name="LineTwoBlock" FontSize="{Binding FontSize}" VerticalAlignment="Center" Text="{Binding LineTwo}" Grid.Row="1" Height="16"/>
    </Grid>
</UserControl>
